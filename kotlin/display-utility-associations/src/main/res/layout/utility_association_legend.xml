<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/attachmentSwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:padding="4dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/utilityAssociationTypesTextView" />

    <TextView
        android:id="@+id/attachmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/attachment"
        app:layout_constraintBottom_toBottomOf="@+id/attachmentSwatch"
        app:layout_constraintStart_toEndOf="@+id/attachmentSwatch"
        app:layout_constraintTop_toTopOf="@+id/attachmentSwatch" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/connectivitySwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:padding="4dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attachmentSwatch" />

    <TextView
        android:id="@+id/connectivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/connectivity"
        app:layout_constraintBottom_toBottomOf="@+id/connectivitySwatch"
        app:layout_constraintStart_toEndOf="@+id/connectivitySwatch"
        app:layout_constraintTop_toTopOf="@+id/connectivitySwatch" />

    <TextView
        android:id="@+id/utilityAssociationTypesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/utility_association_types"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
