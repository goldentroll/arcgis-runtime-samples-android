<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nodeRowTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nodeRowImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/nodeRowTextView"
        app:layout_constraintTop_toTopOf="@+id/nodeRowTextView"
        app:layout_constraintBottom_toBottomOf="@+id/nodeRowTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
