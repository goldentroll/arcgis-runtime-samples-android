<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/totalDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/totalDistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/totalDistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/totalDistanceLabel" />

    <TextView
        android:id="@+id/horizontalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:minEms="4"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/horizontalDistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalDistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/horizontalDistanceLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/verticalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/verticalDistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/verticalDistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/verticalDistanceLabel" />

    <Spinner
        android:id="@+id/units_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/unitsLabel"
        app:layout_constraintBottom_toBottomOf="@+id/unitsLabel"
        app:layout_constraintStart_toEndOf="@+id/unitsLabel" />

    <TextView
        android:id="@+id/totalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/total_distance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/horizontalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/horizontal_distance"
        app:layout_constraintTop_toBottomOf="@+id/totalDistanceLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/verticalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/vertical_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalDistanceLabel" />

    <TextView
        android:id="@+id/unitsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/units"
        app:layout_constraintTop_toBottomOf="@+id/verticalDistanceLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
