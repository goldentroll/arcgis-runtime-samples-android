<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/totalDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/totaldistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/totaldistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/totaldistanceLabel" />

    <TextView
        android:id="@+id/horizontalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:minEms="4"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/horiztonalDistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/horiztonalDistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/horiztonalDistanceLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/verticalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/verticalDistanceLabel"
        app:layout_constraintBottom_toBottomOf="@+id/verticalDistanceLabel"
        app:layout_constraintStart_toEndOf="@+id/verticalDistanceLabel" />

    <Spinner
        android:id="@+id/units_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/unitsLabel"
        app:layout_constraintBottom_toBottomOf="@+id/unitsLabel"
        app:layout_constraintStart_toEndOf="@+id/unitsLabel" />

    <TextView
        android:id="@+id/totaldistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Total Distance:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/horiztonalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Horizontal Distance:"
        app:layout_constraintTop_toBottomOf="@+id/totaldistanceLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/verticalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Vertical Distance:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horiztonalDistanceLabel" />

    <TextView
        android:id="@+id/unitsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Units:"
        app:layout_constraintTop_toBottomOf="@+id/verticalDistanceLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>