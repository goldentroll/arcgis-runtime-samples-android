<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context=".MainActivity">

    <!-- MapView -->
    <com.esri.arcgisruntime.mapping.view.SceneView
            android:id="@+id/sceneView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </com.esri.arcgisruntime.mapping.view.SceneView>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="#adadad"
                  android:id="@+id/linear_layout" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                  android:layout_marginStart="8dp"
                  app:layout_constraintBottom_toBottomOf="@+id/sceneView" android:layout_marginBottom="8dp">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/total_distance"
                  android:textSize="20sp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/vertical_distance"
                  android:textSize="20sp"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/horizontal_distance"
                  android:textSize="20sp"/>
        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/units_spinner"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
