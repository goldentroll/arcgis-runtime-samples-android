<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:clickable="true">

    <TextView
        android:id="@+id/headingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/headingSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="360"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:progress="180"
        app:layout_constraintTop_toBottomOf="@+id/headingTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/zeroDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/headingSeekBar"
        app:layout_constraintStart_toStartOf="@+id/headingSeekBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/ninetyDegreeTextView" />

    <TextView
        android:id="@+id/ninetyDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="90"
        app:layout_constraintTop_toBottomOf="@+id/headingSeekBar"
        app:layout_constraintStart_toEndOf="@+id/zeroDegreeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/oneEightyDegreeTextView" />

    <TextView
        android:id="@+id/oneEightyDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:text="180"
        app:layout_constraintTop_toBottomOf="@+id/headingSeekBar"
        app:layout_constraintStart_toEndOf="@+id/ninetyDegreeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/twoSeventyDegreeTextView"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/twoSeventyDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="270"
        app:layout_constraintTop_toBottomOf="@+id/headingSeekBar"
        app:layout_constraintStart_toEndOf="@+id/oneEightyDegreeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toStartOf="@+id/threeSixtyDegreeTextView" />

    <TextView
        android:id="@+id/threeSixtyDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="360"
        app:layout_constraintTop_toBottomOf="@+id/headingSeekBar"
        app:layout_constraintStart_toEndOf="@+id/twoSeventyDegreeTextView"
        app:layout_constraintEnd_toEndOf="@+id/headingSeekBar"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
